var Router = Backbone.Router.extend({
  routes: {
    '': 'welcome',
    'users/new': 'usersNew',
    'session/new': 'sessionNew',
    'users/:id': 'userShow'
  },

  initialize: function(opts) {
    console.log("Router created");

    this.session = opts.session;
    this.user = opts.user;
    // instantiate navigation view once (when router create)
    var navigation = new NavigationView({session: this.session});
    $('body').append(navigation.el);
  },

  welcome: function() {
    this.loadView(new WelcomeView());
  },

  usersNew: function() {
    console.log('users/new route hit');
    this.loadView(new NewUserFormView({user: this.user}));
  },

  sessionNew: function() {
    console.log('sessions/new route hit');
    this.loadView(new SignInFormView({session: this.session, user: this.user}));
  },

  userShow: function(id) {
    console.log('users/%s route hit', id);

    console.log('current user url: %s', this.user.get('url'));
    
    var self = this;
    console.log(self.user);

    // self.user.set('id', id);

    // self.user.fetch({
    //   success: function() {
    //     _.each(arguments, console.log);
    //   },
    //   error: function() {
    //     _.each(arguments, console.log);
    //   }
    // });

    $.ajax({
      url: "/users/" + id,
      type: "GET",
      dataType: "json",
      success: function(userJSON) {
        console.log('user show GET success');

        self.user.set(userJSON);

        response = arguments;
      },
      context: this
    });

    console.log(this.user);
    // NOWNOWNOWNOWNOWNOW
    // populate this.user w/ user model w/ resp for rendering in usershowview
    this.loadView(new UserShowView);
  },

  loadView: function(view) {
    this.main && this.main.remove();
    this.main = view;
    // console.log('this.main: %s', this.main);
    $('body').append(view.el);
  }
});